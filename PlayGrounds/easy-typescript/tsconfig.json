{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES5",
    "module": "commonjs",
    "noEmit": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
